<Window x:Class="File_Manager_MEDGEN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_Manager_MEDGEN" xmlns:ccontrols="clr-namespace:File_Manager_MEDGEN.CControls" xmlns:vm="clr-namespace:File_Manager_MEDGEN.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="835" Width="1520" FontSize="15" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" WindowState="Normal" Background="Transparent">

    <Window.Resources>

        <Style x:Key="MenuButtonStyle" TargetType="{x:Type ToggleButton}">

            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="Foreground" Value="SlateGray" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="20,0,-1,0" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <!--Top left, Top right, Bottom right Then Bottom left-->
                        <Border
                                CornerRadius="5,5,5,5"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <!--Icon-->
                                    <ColumnDefinition />
                                    <!--Content-->
                                </Grid.ColumnDefinitions>

                                <Path Data="{TemplateBinding Tag}"
                                          Fill="{TemplateBinding Foreground}"
                                          Style="{StaticResource {x:Type Path}}" />
                                <ContentPresenter
                                        Grid.Column="1"
                                        TextBlock.TextAlignment="Left"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Content="{TemplateBinding Content}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#A3DAF5" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background = "WhiteSmoke"
CornerRadius = "10">

        <Grid Margin="-1,0,1,0">
            <Grid.ColumnDefinitions>
                <!-- Left Panel-->
                <ColumnDefinition Width="250" />

                <!--Main Content-->
                <ColumnDefinition />

                <!--Right Panel-->
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <!--Logo-->
                <!--<TextBlock FontSize="30"
                           Margin=""
                           Text="IKCU AI"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />-->
                <Image
                    Source="pack://application:,,,/Images/ikcu-logo.png"
                    Width="90"
                    Height="90"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10" />
                <Separator
                    VerticalAlignment="Bottom"
                    Width="200"
                    Background="Silver" />

                <!--Profile Button-->
                <StackPanel
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Width="200">
                    <Button Content="Batu Aribakir">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Height" Value="50" />
                                <Setter Property="Background" Value="#D1F0FF" />
                                <Setter Property="Foreground" Value="SlateGray" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="25"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <Grid>
                                                    <Ellipse
                                                         HorizontalAlignment="Left"
                                                        Margin="2,0"
                                                         Height="45"
                                                         Width="45"
                                                         Stretch="UniformToFill"
                                                         Stroke="White"
                                                         StrokeThickness="2">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="pack://application:,,,/assets/1.png" Stretch="UniformToFill" />
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  Content="{TemplateBinding Content}" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Grid Width="70" HorizontalAlignment="Left"
                          Margin="0,10">
                        <TextBlock Text="Logout"
                                   Foreground="SlateGray"
                                   VerticalAlignment="Center" 
                                   MouseDown="Logout_Click"
                                   Cursor="Hand"/>
                        <Path Data="{StaticResource right}"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <Separator Grid.Row="1"
                    VerticalAlignment="Bottom"
           Width="200"
           Background="LightGray" />

                <!--Menu -->
                <StackPanel
                    Grid.Row="2"
                    Margin="0,10">

                    <RadioButton
                        IsChecked="True"
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource home}"
                        Content="Home"
                        Command="{Binding ShowHomeCommand}" />
                    <RadioButton
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource sharedfolders}"
                        Content="Shared Files"
                        Command="{Binding ShowSharedFilesCommand}" />
                    <RadioButton
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource starred}"
                        Content="Reports"
                         Command="{Binding ShowReportsCommand}" />
                    <RadioButton
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource statistics}"
                        Content="Patients"
                        Command="{Binding ShowStatisticsCommand}" />
                    <RadioButton
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource settings}"
                        Content="Settings"
                        Command="{Binding ShowSettingsCommand}" />
                    <RadioButton
                        GroupName="Menu"
                        Style="{StaticResource MenuButtonStyle}"
                        Tag="{StaticResource support}"
                        Content="Support"
                        Command="{Binding ShowSupportCommand}" />
                </StackPanel>
                <Grid
                    Grid.Row="4"
                    Width="200">

                    <Rectangle
                    RadiusX="10"
                    RadiusY="10"
                    StrokeDashArray="5"
                    StrokeThickness="1"
                    Stroke="SlateGray" />

                    <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                        <Path
                        Data="{StaticResource documentfile}"
                        Style="{StaticResource {x:Type Path}}" />
                        <TextBlock
                        Margin="0,5"
                        Text="Drop File"
                        Foreground="SlateGray" />
                    </StackPanel>
                </Grid>

                <Button
                    Margin="25"
                    Grid.Row="5"
                    BorderThickness="0"
                    Background="#D1F0FF"
                    Content="Upload File"
                    Foreground="DarkSlateGray"
                    Height="50">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!--Main Content-->
            <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />

            <!--Right Panel-->
            <Grid
     Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel
         Grid.Row="0"
         Orientation="Horizontal"
         HorizontalAlignment="Right">

                    <!--btnMinimize-->
                    <Button
             x:Name="btnMinimize"
             BorderThickness="0"
             Content="-"
             Foreground="White"
             FontSize="12"
             FontFamily="Montserrat"
             Cursor="Hand"
             Click="btnMinimize_Click"
             Margin="5">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#28AEED" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="12" Height="12"
                     CornerRadius="9"
                     Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--btnMaximize-->
                    <Button
          x:Name="btnMaximize"
          BorderThickness="0"
          Content="🗖"
          Foreground="White"
          FontSize="8"
          FontFamily="Montserrat"
          Cursor="Hand"
          Click="btnMaximize_Click"
          Margin="5">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#28AEED" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="12" Height="12"
                 CornerRadius="9"
                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--btnClose-->
                    <Button
             x:Name="btnClose"
             BorderThickness="0"
             Content="X"
             Foreground="White"
             FontSize="8"
             FontFamily="Montserrat"
             Cursor="Hand"
             Click="btnClose_Click"
             Margin="5">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#A41B33" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="12" Height="12"
     CornerRadius="9"
     Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>