                    <Grid
                                Margin="0,20,0,0">

                        <TextBlock
                                    Text="List"
                                    Foreground="Gray" />
                        <Button
                                    Width="30"
                                    BorderBrush="Silver"
                                    Foreground="Silver"
                                    HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Path
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                            Style="{StaticResource {x:Type Path}}"
                                            Data="{StaticResource more}" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Grid
                        Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>

                        <StackPanel
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                            <TextBlock
                                        Text="Type"
                                        VerticalAlignment="Center" />
                            <Path
                                        Margin="10,0"
                                        Width="10"
                                        Data="{StaticResource sortdown}" />
                        </StackPanel>

                        <StackPanel
                                    Grid.Column="2"
                                    Orientation="Horizontal">
                            <TextBlock
                                        Text="Document Name"
                                        VerticalAlignment="Center" />
                            <Path
                                        Margin="10,0"
                                        Width="10"
                                        Data="{StaticResource sortdown}" />
                        </StackPanel>

                        <StackPanel
                                    Grid.Column="3"
                                    Orientation="Horizontal">
                            <TextBlock
                                        Text="Size"
                                        VerticalAlignment="Center" />
                            <Path
                                        Margin="10,0"
                                        Width="10"
                                        Data="{StaticResource sortdown}" />
                        </StackPanel>

                        <StackPanel
                                    Grid.Column="4"
                                    Orientation="Horizontal">
                            <TextBlock
                                        Text="Last Edit"
                                        VerticalAlignment="Center" />
                            <Path
                                        Margin="10,0"
                                        Width="10"
                                        Data="{StaticResource sortdown}" />
                        </StackPanel>

                        <StackPanel
                                    Grid.Column="5"
                                    Orientation="Horizontal">
                            <TextBlock
                                        Text="Shared With (Consultation)"
                                        VerticalAlignment="Center" />
                            <Path
                                        Margin="10,0"
                                        Width="10"
                                        Data="{StaticResource sortdown}" />
                        </StackPanel>
                    </Grid>

                    <ccontrols:CRow
                        Icon ="{StaticResource docfile}"
                        DocName="Last Quarter Statistics"
                        FileSize="0.7 MB"
                        LastEdit="10 March 2020" />
                    <ccontrols:CRow
                        Margin="0,10"
