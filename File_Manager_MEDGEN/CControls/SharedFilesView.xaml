<UserControl x:Class="File_Manager_MEDGEN.CControls.SharedFilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ccontrols="clr-namespace:File_Manager_MEDGEN.CControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid
                        Grid.Column="1"
                        Background="#E1E4E6">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--Search Box & Create New Button-->
                <Grid
                    Height="100"
                    Margin="40,0"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Background="WhiteSmoke"
                        Height="50"
                        CornerRadius="10">
                        <Grid
                            VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <Path
                                Style="{StaticResource {x:Type Path}}"
                                Data="{StaticResource search}" />
                            <TextBlock
                                Foreground="Gray"
                                Grid.ColumnSpan="3"
                                Padding="50,0"
                                Text="Search"
                                TextAlignment="Left"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />
                            <Path
                                Grid.Column="2"
                                Style="{StaticResource {x:Type Path}}"
                                Data="{StaticResource mic}" />
                        </Grid>
                    </Border>
                    <Button
                        Margin="25,0,0,0"
                        Grid.Column="1"
                        BorderThickness="0"
                        Background="#A31B34"
                        Foreground="White"
                        Height="50"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>

                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Path
                                    Data="{StaticResource plus}"
                                    Style="{StaticResource {x:Type Path}}"
                                    Fill="White"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="Create New"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </Grid>

                <StackPanel
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="40,0">

                    <!--<WrapPanel>
                        <ccontrols:CardControl
                                    IsChecked="True"
                                    DriveName="Google Drive"
                                    ImageSource="/assets/googledrive.png"
                                    LastChange="Last Changes: 23.08.24" />
                        <ccontrols:CardControl
                                    Margin="20,0"
                                    DriveName="Dropbox"
                                    ImageSource="/assets/dropbox.png"
                                    LastChange="Last Changes: 23.08.24" />
                        <ccontrols:CardControl
                                    DriveName="OneDrive"
                                    ImageSource="/assets/onedrive.png"
                                    LastChange="Last Changes: 23.08.24" />
                    </WrapPanel>-->

                    <Grid
                                Margin="0,20">

                        <TextBlock
                                    Text="Active Patients"
                                    Foreground="Gray" />
                        <Button
                                    Width="30"
                                    Background="Transparent"
                                    BorderBrush="Silver"
                                    Foreground="Silver"
                                    HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Path
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource               Mode=FindAncestor, AncestorType=Button}}"
                                            Style="{StaticResource {x:Type Path}}"
                                            Data="{StaticResource more}" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                        HorizontalAlignment="Left"
                                        Height="50"
                                        Width="50"
                                        RadiusX="5"
                                        RadiusY="5">
                                <Rectangle.Fill>
                                    <ImageBrush
                                                ImageSource="pack://application:,,,/assets/3.jpg"
                                                Stretch="UniformToFill" />
                                </Rectangle.Fill>
                            </Rectangle>

                            <TextBlock
                                        Margin="10,0"
                                        Grid.Column="1"
                                        Text="Batu Aribakir"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                                <Run
                                    FontWeight="Bold"
                                    Text="Can Edit"
                                    FontSize="12"
                                    Foreground="Gray" />
                                <LineBreak />
                            </TextBlock>
                        </Grid>
                        <Grid
                                    Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                        HorizontalAlignment="Left"
                                        Height="50"
                                        Width="50"
                                        RadiusX="5"
                                        RadiusY="5">
                                <Rectangle.Fill>
                                    <ImageBrush
                                                ImageSource="pack://application:,,,/assets/3.jpg"
                                                Stretch="UniformToFill" />
                                </Rectangle.Fill>
                            </Rectangle>

                            <TextBlock
                                        Margin="10,0"
                                        Grid.Column="1"
                                        Text="Batu Aribakir"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                                <Run
                                    FontWeight="Bold"
                                    Text="Can Edit"
                                    FontSize="12"
                                    Foreground="Gray" />
                                <LineBreak />
                            </TextBlock>
                        </Grid>
                        <Grid
                                    Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                        HorizontalAlignment="Left"
                                        Height="50"
                                        Width="50"
                                        RadiusX="5"
                                        RadiusY="5">
                                <Rectangle.Fill>
                                    <ImageBrush
                                                ImageSource="pack://application:,,,/assets/3.jpg"
                                                Stretch="UniformToFill" />
                                </Rectangle.Fill>
                            </Rectangle>

                            <TextBlock
                                        Margin="10,0"
                                        Grid.Column="1"
                                        Text="Batu Aribakir"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                    <Run
                        FontWeight="Bold"
                        Text="Can Edit"
                        FontSize="12"
                        Foreground="Gray" />
                                <LineBreak />
                            </TextBlock>
                        </Grid>
                        <Grid
                                    Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                        HorizontalAlignment="Left"
                                        Height="50"
                                        Width="50"
                                        RadiusX="5"
                                        RadiusY="5">
                                <Rectangle.Fill>
                                    <ImageBrush
                                                ImageSource="pack://application:,,,/assets/3.jpg"
                                                Stretch="UniformToFill" />
                                </Rectangle.Fill>
                            </Rectangle>

                            <TextBlock
                                        Margin="10,0"
                                        Grid.Column="1"
                                        Text="Batu Aribakir"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                    <Run
                        FontWeight="Bold"
                        Text="Can Edit"
                        FontSize="12"
                        Foreground="Gray" />
                                 <LineBreak />
                            </TextBlock>
                        </Grid>
                    </Grid>

                    <!--<Grid
                                Margin="0,20">

                        <Button
                                    Width="30"
                                    BorderBrush="Silver"
                                    Foreground="Silver"
                                    HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Path
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                            Style="{StaticResource {x:Type Path}}"
