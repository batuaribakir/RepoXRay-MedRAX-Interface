<UserControl x:Class="File_Manager_MEDGEN.CControls.CRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:File_Manager_MEDGEN.CControls"
             mc:Ignorable="d" Height="50"
             x:Name="this">

    <RadioButton
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <RadioButton.Style>
            <Style TargetType="{x:Type ToggleButton}">
                <Setter Property="Background" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border
                                    Background="{TemplateBinding Background}"
                                CornerRadius="5">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <!-- Checkbox -->
                                        <ColumnDefinition Width="124" />
                                        <!-- Icon -->
                                        <ColumnDefinition Width="175" />
                                        <!-- Document Name -->
                                        <ColumnDefinition Width="175" />
                                        <!-- File Size -->
                                        <ColumnDefinition Width="175" />
                                        <!-- Last Edit -->
                                        <ColumnDefinition Width="175" />
                                        <!-- Avatars -->
                                    </Grid.ColumnDefinitions>

                                    <CheckBox
                                        Grid.Column="0"
                                        IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type RadioButton}}}"
                                        Height="15"
                                        
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                        <CheckBox.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5" />
                                            </Style>
                                        </CheckBox.Resources>
                                    </CheckBox>

                                    <Path
                                        Grid.Column="1"
                                        Data="{StaticResource docfile}"

                                        Style="{StaticResource {x:Type Path}}" 
                                        HorizontalAlignment="Center"
                                        Margin="20,0,20,0"/>

                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{Binding DocName, FallbackValue='Document Name', TargetNullValue='Document Name'}" 
                                        HorizontalAlignment="Center"
                                        Margin="10,0,10,0"/>
                                    <TextBlock
                                        Grid.Column="3"
                                        Text="{Binding FileSize, FallbackValue='File Size', TargetNullValue='File Size'}" 
                                        HorizontalAlignment="Center"
                                        Margin="20,0,20,0"/>
                                    <TextBlock
                                        Grid.Column="4"
                                        Text="{Binding LastEdit, FallbackValue='Last Edit', TargetNullValue='Last Edit'}" 
                                        HorizontalAlignment="Center"
                                        Margin="20,0,20,0"/>

                                    <StackPanel
                                        Orientation="Horizontal"
                                        Grid.Column="5"
                                        HorizontalAlignment="Center"
                                        Margin="20,0,20,0">

                                        <Ellipse
                                            StrokeThickness="1"
                                            Stroke="White"
                                            Height="30"
                                            Width="30"
                                            HorizontalAlignment="Right">
                                            <Ellipse.Fill>
                                                <ImageBrush
                                                    ImageSource="pack://application:,,,/assets/1.png"
                                                    Stretch="Uniform" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Ellipse
                                            StrokeThickness="1"
                                            Stroke="White"
                                            Margin="-5,0"
                                            Height="30"
                                            Width="30"
                                            HorizontalAlignment="Right">
                                            <Ellipse.Fill>
                                                <ImageBrush
                                                    ImageSource="pack://application:,,,/assets/1.png"
                                                    Stretch="Uniform" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Ellipse
                                            StrokeThickness="1"
                                            Stroke="white"
                                            Height="30"
                                            Width="30"
                                            HorizontalAlignment="Right">
                                            <Ellipse.Fill>
                                                <ImageBrush
                                                    ImageSource="pack://application:,,,/assets/1.png"
                                                    Stretch="Uniform" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </StackPanel>

                                    <Button
                                        Background="Transparent"
                                        BorderThickness="0">

                                        
                                    </Button>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </RadioButton.Style>
    </RadioButton>
</UserControl>