<UserControl x:Class="File_Manager_MEDGEN.CControls.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ccontrols="clr-namespace:File_Manager_MEDGEN.CControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid
                        Grid.Column="1"
                        Background="#E1E4E6">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--Search Box & Create New Button-->
                <Grid
                    Height="100"
                    Margin="40,0"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Background="WhiteSmoke"
                        Height="50"
                        CornerRadius="10"
                        Cursor="IBeam">
                        <Grid
                            VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <Path
                                Style="{StaticResource {x:Type Path}}"
                                Data="{StaticResource search}" />
                            <TextBlock
                                Foreground="Gray"
                                Grid.ColumnSpan="3"
                                Padding="50,0"
                                Text="Search"
                                TextAlignment="Left"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />
                            <Path
                                Grid.Column="2"
                                Style="{StaticResource {x:Type Path}}"
                                Data="{StaticResource mic}" />
                        </Grid>
                    </Border>
                    <Button
                        Margin="25,0,0,0"
                        Grid.Column="1"
                        BorderThickness="0"
                        Background="#A31B34"
                        Foreground="White"
                        Height="50"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>

                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Path
                                    Data="{StaticResource plus}"
                                    Style="{StaticResource {x:Type Path}}"
                                    Fill="White"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="Create New"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </Grid>

                <StackPanel
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="40,0">


                    <Grid
                                Margin="0,20">

                        <TextBlock
                                    Text="Folders"
                                    Foreground="Gray" />
                        <Button
                                    Width="30"
                                    BorderBrush="Silver"
                                    Foreground="Silver"
                                    HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Path
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                            Style="{StaticResource {x:Type Path}}"
                                            Data="{StaticResource more}" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <WrapPanel>
                        <ccontrols:FoldersControl
                                    FolderName="Dribbles"
                                    LastChange="Last Changes: 26.08.2024" />

                        <ccontrols:FoldersControl
                                    Margin="20,0"
                                    FolderName="My Documents"
                                    LastChange="Last Changes: 26.08.2024" />
                        <ccontrols:FoldersControl
                                    FolderName="Databases"
                                    LastChange="Last Changes: 26.08.2024" />
                    </WrapPanel>

                    <Grid
                                Margin="0,20,0,0">

                        <TextBlock
                                    Text="Recent Files"
                                    Foreground="Gray" />
                        
                        <Button
    
                            Width="150"
                            HorizontalAlignment="Right"
                            Click="UploadFile_Click"
                            BorderThickness="1"
                            Background="#A31B34"
                            Content="Upload File"
                            Foreground="White"
    >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <WrapPanel x:Name="RecentFilesPanel" Margin="0,10,0,0" />



                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>

</UserControl>